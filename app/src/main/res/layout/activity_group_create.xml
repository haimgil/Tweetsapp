<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.haim.tweetsapp.GroupCreate"
    android:orientation="vertical"
    android:background="@drawable/tweetsapp_background">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:layout_weight="3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/groupCreateField1"
            android:id="@+id/textView2"
            android:textSize="27dp"
            android:textColor="#ea040504" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/GroupCreateFiled2"
            android:id="@+id/textView3"
            android:textSize="27dp"
            android:textColor="#ea040504"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="73dp"
            android:id="@+id/imageButton"
            android:background="@android:drawable/ic_input_add"
            android:layout_marginLeft="30dp" />

    </LinearLayout>

</LinearLayout>
