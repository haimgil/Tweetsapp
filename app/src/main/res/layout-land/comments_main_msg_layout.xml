<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/date_text"
                android:id="@+id/msgDateTextView"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:textColor="#ff1c16ff"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="285dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/msg_time_text"
                android:id="@+id/msgTimeTextView"
                android:textColor="#ff1c16ff"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_marginLeft="225dp" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="280dp"
                android:text="@string/msg_text"
                android:id="@+id/msgTextView"
                android:textSize="20dp"
                android:textColor="#fffffff5"
                android:autoText="false"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_layout_users_msg"
                android:layout_marginRight="5dp" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
